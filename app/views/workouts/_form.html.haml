= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f|
  = f.input :date, label: "Date"
  = f.input :workout, label: "What area did you work out?", input_html: { class: "form-control" }
  = f.input :mood, label: "How were you feeling?", input_html: { class: "form-control" }
  = f.input :length, label: "How long did you work out for?", input_html: { class: "form-control" }
  %br/
  = f.button :submit
